<div class="login row" style="height: 100%; justify-content: center; align-items: center;">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Sign In</h1>

      <% if(success_flash != '') { %>
      <div class="alert alert-info">
        <%= success_flash %>
      </div>
      <% } %>
      <% if(error != '') { %>
      <div class="alert alert-danger">
        <%= error %>
      </div>
      <% } %>
      <% if(warning_flash != '') { %>
      <div class="alert alert-danger">
        <%= warning_flash %>
      </div>
      <% } %>

      <form action="/" method="POST">
        <div class="form-group">
          <input type="email" id="email" name="email" class="form-control" placeholder="Email..." />
        </div>
        <div class="form-group">
          <input type="password" id="password" name="password" class="form-control" placeholder="Password..." />
        </div>
        <button type="submit" class="btn-submit">Sign In</button>
      </form>
      <p class="mt-3">No Account? <a href="/register">Sign Up</a></p>


      <div class="oAuth">
        <p>Or you can sign in with</p>
        <div class="icon">
          <a href="/auth/google"><img src="https://image.flaticon.com/icons/svg/2702/2702602.svg" alt=""></a>
          <a href="/auth/facebook"><img src="https://image.flaticon.com/icons/svg/733/733547.svg" alt=""></a>
        </div>
      </div>
    </div>
  </div>